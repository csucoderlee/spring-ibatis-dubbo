<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.csu.coderlee.dao.PostMapper">

    <resultMap id="PostMap" type="org.csu.coderlee.domain.Post">
        <result property="theme" column="theme"/>
    </resultMap>

    <select id="selectById" resultMap="PostMap" parameterType="java.lang.Long">
        select
        *
        from post
        where id = 1
    </select>

</mapper>
